{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "declaration": true,
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "typeRoots": [
            "./node_modules/@types/"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
